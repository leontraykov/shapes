<%= render 'hero' %>

<br>
<h1>SHAPES BEST SELLERS</h1>
<% if Spree::Slide.published.count > 0 %>
  <section id="slideshow">
    <ul class="slide">
      <% Spree::Slide.published.order('position ASC').each do |s| %>
        <li>
          <h1 class="slide-title"><%= s.slide_caption %></h1>
          <%= link_to image_tag(s.slide_image.url), url_for(s.slide_link), class:"a-slide" %>
        </li>
      <% end %>
    </ul>
    <!-- <a title="<% t(:previous) %>" class="slider-prev"><%= t(:previous)%></a>
    <a title="<% t(:next) %>" class="slider-next"><%= t(:next) %></a> -->
  </section>
<% end %>

<br>
<h1>Find yours especial</h1>
<article>
  <% cache(cache_key_for_products) do %>
    <%= render 'products/products', products: @products %>
  <% end %>
</article>

