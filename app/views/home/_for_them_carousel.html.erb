 <!-- Container for the image gallery -->
<div class="container">

  <!-- Full-width images with number text -->
  <div class="mySlides">
    <div class="slider-image-div">
      <%= image_tag("for_them/soccer1.jpg", class:"slider-image") %>
    </div>
  </div>

  <div class="mySlides">
    <div class="slider-image-div">
      <%= image_tag("for_them/soccer2.jpg", class:"slider-image") %>
    </div>
  </div>

  <div class="mySlides">
    <div class="slider-image-div">
      <%= image_tag("for_them/soccer3.jpg", class:"slider-image") %>
    </div>
  </div>

  <div class="mySlides">
    <div class="slider-image-div">
      <%= image_tag("for_them/soccer4.jpg", class:"slider-image") %>
    </div>
  </div>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>

  <!-- Image text -->
  <div class="caption-container">
    <p id="caption"></p>
  </div>
<div class="thumbs">
  <!-- Thumbnail images -->
  <div class="row">
    <div class="column">
      <%= image_tag("for_them/soccer1.jpg", class:"demo cursor slider-image", onclick:"currentSlide(1)") %>
    </div>
    <div class="column">
      <%= image_tag("for_them/soccer2.jpg", class:"demo cursor slider-image", onclick:"currentSlide(2)") %>
    </div>
    <div class="column">
      <%= image_tag("for_them/soccer3.jpg", class:"demo cursor slider-image", onclick:"currentSlide(3)") %>
    </div>
    <div class="column">
      <%= image_tag("for_them/soccer4.jpg", class:"demo cursor slider-image", onclick:"currentSlide(4)") %>
    </div>
  </div>
</div> 
</div>


<script>
  let slideIndex = 1;
showSlides(slideIndex);

// Next/previous controls
function plusSlides(n) {
  showSlides(slideIndex += n);
}

// Thumbnail image controls
function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  let i;
  let slides = document.getElementsByClassName("mySlides");
  let dots = document.getElementsByClassName("demo");
  let captionText = document.getElementById("caption");
  if (n > slides.length) {slideIndex = 1}
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
  }
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";
  dots[slideIndex-1].className += " active";
  captionText.innerHTML = dots[slideIndex-1].alt;
} 
</script>